FROM metadatacenter/cedar-microservice:2.2.8-SNAPSHOT

ENV CEDAR_SERVER_NAME=open

ENV CEDAR_OPEN_HTTP_PORT=9013
ENV CEDAR_OPEN_ADMIN_PORT=9113
ENV CEDAR_OPEN_STOP_PORT=9213

ENV CEDAR_WORKSPACE_HTTP_PORT=9008
ENV CEDAR_TEMPLATE_HTTP_PORT=9001

ENV LOGDIR=${CEDAR_HOME}/log/cedar-${CEDAR_SERVER_NAME}-server/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

ADD scripts/pre-docker-entrypoint.sh ${CEDAR_HOME}/

EXPOSE ${CEDAR_OPEN_HTTP_PORT} ${CEDAR_OPEN_ADMIN_PORT} ${CEDAR_OPEN_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh
