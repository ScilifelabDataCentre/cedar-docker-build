FROM metadatacenter/cedar-microservice:1.8.0

ENV CEDAR_SERVER_NAME=workspace

ENV CEDAR_WORKSPACE_HTTP_PORT=9008
ENV CEDAR_WORKSPACE_ADMIN_PORT=9108
ENV CEDAR_WORKSPACE_STOP_PORT=9208

ENV LOGDIR=${CEDAR_HOME}/log/cedar-${CEDAR_SERVER_NAME}-server/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

ADD scripts/pre-docker-entrypoint.sh ${CEDAR_HOME}/

EXPOSE ${CEDAR_WORKSPACE_HTTP_PORT} ${CEDAR_WORKSPACE_ADMIN_PORT} ${CEDAR_WORKSPACE_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh
