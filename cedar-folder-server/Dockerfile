FROM metadatacenter/cedar-microservice

ENV CEDAR_SERVER_NAME=folder

ENV CEDAR_FOLDER_HTTP_PORT=9008
ENV CEDAR_FOLDER_ADMIN_PORT=9108
ENV CEDAR_FOLDER_STOP_PORT=9208

ENV LOGDIR=${CEDAR_HOME}/log/cedar-${CEDAR_SERVER_NAME}-server/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

EXPOSE ${CEDAR_FOLDER_HTTP_PORT} ${CEDAR_FOLDER_ADMIN_PORT} ${CEDAR_FOLDER_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh