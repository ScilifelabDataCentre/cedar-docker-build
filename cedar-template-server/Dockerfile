FROM metadatacenter/cedar-microservice:2.0.4

ENV CEDAR_SERVER_NAME=template

ENV CEDAR_TEMPLATE_HTTP_PORT=9001
ENV CEDAR_TEMPLATE_ADMIN_PORT=9101
ENV CEDAR_TEMPLATE_STOP_PORT=9201

ENV LOGDIR=${CEDAR_HOME}/log/cedar-${CEDAR_SERVER_NAME}-server/
RUN mkdir -p ${LOGDIR}
VOLUME ${LOGDIR}

ADD scripts/pre-docker-entrypoint.sh ${CEDAR_HOME}/

EXPOSE ${CEDAR_TEMPLATE_HTTP_PORT} ${CEDAR_TEMPLATE_ADMIN_PORT} ${CEDAR_TEMPLATE_STOP_PORT}

RUN ${CEDAR_HOME}/install_deps.sh
